// used by the compositor script HellHeavenOgre/Compositor/BlackAndWhite
material HellHeavenOgre/Material/BlackAndWhite
{
	technique
	{
		pass
		{
			depth_check off

			vertex_program_ref HellHeavenOgre/Program/BlackAndWhiteVS { }
			fragment_program_ref HellHeavenOgre/Program/BlackAndWhitePS { }

			texture_unit
			{
				tex_coord_set 0
				tex_address_mode clamp
				filtering linear linear linear
			}
		}
	}
}

// used by the compositor script HellHeavenOgre/Compositor/Distortion
material HellHeavenOgre/Material/Distortion
{
	technique
	{
		pass
		{
			depth_check off

			vertex_program_ref HellHeavenOgre/Program/DistortionVS { }
			fragment_program_ref HellHeavenOgre/Program/DistortionPS { }

			// our rt scene texture
			texture_unit
			{
				tex_coord_set 0
				tex_address_mode clamp
				filtering linear linear linear
			}

			// out rt distortion texture
			texture_unit
			{
				tex_coord_set 1
				tex_address_mode clamp
				filtering linear linear linear
			}
		}
	}
}

